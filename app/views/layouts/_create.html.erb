<%= form_for @serves do |f| %>
  <%= f.text_field :name, :class => "large", :placeholder => "Your serve", :style => "width:98%", :type => "textbox" %><br />
  <%= f.text_area :comment, :class => "large", :placeholder => "Say something about it (optional)", :style => "height:100px; width:98%;", :type => "textbox" %><br />
  <%= f.submit :class => "button", :value => "Serve!", :style => "float:right; margin-top:10px;", :type => "textbox" %>
<% end %>